# Backend
NODE_ENV=development
PORT=5000

DB_HOST=localhost
DB_PORT=5432
DB_NAME=wellbeing_db
DB_USER=postgres
DB_PASSWORD=

# REQUIRED in production (use a strong random value)
JWT_SECRET=change-me-to-a-long-random-secret
JWT_EXPIRES_IN=7d

# Frontend origin for CORS + link generation
FRONTEND_URL=http://localhost:3000

# Optional: create a default admin during migrations (dev only)
# Run: npm run migrate (from backend/)
CREATE_DEFAULT_ADMIN=false
DEFAULT_ADMIN_EMAIL=admin@company.com
DEFAULT_ADMIN_PASSWORD=change-this
DEFAULT_ADMIN_NAME=System Admin
